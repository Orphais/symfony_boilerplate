		<h1>Liste des sauces</h1>
	</div>
	<table class="table table-hover mt-4">
		<thead>
			<tr>
				<th scope="col">Sauce</th>
				<th scope="col">Burger associ√©</th>
			</tr>
		</thead>
		<tbody>

			{% for sauce in sauces2 %}
				<tr>
					<th scope="row">{{ sauce[0].name }}</th>
					<td>
						{% for burger in sauce[1] %}
							{{ burger.name }}
							{% if not loop.last %},
							{% endif %}
