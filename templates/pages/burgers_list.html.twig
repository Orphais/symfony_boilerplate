				<th scope="row">{{ burger.name }}</th>
				<td>{{ burger.price }}</td>
				<td>{{ burger.pain.name }}</td>
				<td>
					<a href="{{ path('burger_show', { id: burger.id }) }}" class="btn btn-info">DÃ©tails</a>
