{% extends "base.html.twig" %}

{% block title %}
	Liste des images - CRUDcroustillant
{% endblock %}

{% block body %}

	{% for message in app.flashes('error') %}
		<div class="alert alert-danger mt-4">
			{{ message }}
		</div>
	{% endfor %}
	<div class="container mt-4">
		<h1>Liste des images</h1>
	</div>
	<table class="table table-hover mt-4">
		<thead>
			<tr>
				<th scope="col">Images</th>
				<th scope="col">Burger associ√©</th>
			</tr>
		</thead>
		<tbody>

			{% for image in images %}
				<tr>
					<td>
						<img src="{{ image.name }}" alt="" style="max-height: 100px;">
					</td>
					<td>
						{% if image.burger is not null %}
							{{ image.burger.name }}
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
